{
  "manifest_version": 3,
  "name": "Quick Notes",
  "version": "1.0.0",
  "description": "A simple note-taking extension with tagging",
  "permissions": ["storage", "unlimitedStorage"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Quick Notes",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
